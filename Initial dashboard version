    <!-- Overlay for mobile -->
    <div id="overlay" class="fixed inset-0 bg-black bg-opacity-50 z-30 hidden lg:hidden"></div>

    <script>
        // Initialize Lucide icons
        lucide.createIcons();

        // Navigation functionality
        const sidebar = document.getElementById('sidebar');
        const overlay = document.getElementById('overlay');
        const mobileMenuBtn = document.getElementById('mobile-menu-btn');
        const closeSidebar = document.getElementById('close-sidebar');
        const menuHeaders = document.querySelectorAll('.menu-header');
        const submenuItems = document.querySelectorAll('.submenu-item');
        const pageContents = document.querySelectorAll('.page-content');

        // Mobile menu toggle
        mobileMenuBtn.addEventListener('click', () => {
            sidebar.classList.remove('-translate-x-full');
            overlay.classList.remove('hidden');
        });

        closeSidebar.addEventListener('click', () => {
            sidebar.classList.add('-translate-x-full');
            overlay.classList.add('hidden');
        });

        overlay.addEventListener('click', () => {
            sidebar.classList.add('-translate-x-full');
            overlay.classList.add('hidden');
        });

        // Menu accordion functionality
        menuHeaders.forEach(header => {
            header.addEventListener('click', () => {
                const submenu = header.nextElementSibling;
                const chevron = header.querySelector('[data-lucide="chevron-down"]');
                
                // Close other submenus
                menuHeaders.forEach(otherHeader => {
                    if (otherHeader !== header) {
                        const otherSubmenu = otherHeader.nextElementSibling;
                        const otherChevron = otherHeader.querySelector('[data-lucide="chevron-down"]');
                        otherSubmenu.classList.add('hidden');
                        otherChevron.style.transform = 'rotate(0deg)';
                    }
                });

                // Toggle current submenu
                submenu.classList.toggle('hidden');
                chevron.style.transform = submenu.classList.contains('hidden') ? 'rotate(0deg)' : 'rotate(180deg)';
            });
        });

        // Page navigation
        submenuItems.forEach(item => {
            item.addEventListener('click', () => {
                const pageId = item.getAttribute('data-page');
                
                // Hide all pages
                pageContents.forEach(page => {
                    page.classList.add('hidden');
                });
                
                // Show selected page
                const targetPage = document.getElementById(pageId);
                if (targetPage) {
                    targetPage.classList.remove('hidden');
                    
                    // Trigger page-specific animations
                    if (pageId === 'title-page') {
                        initializeTitlePageAnimations();
                    } else if (pageId === 'overview') {
                        initializeOverviewAnimations();
                    }
                }
                
                // Remove active state from all items
                submenuItems.forEach(otherItem => {
                    otherItem.classList.remove('bg-blue-100', 'text-blue-700', 'font-medium');
                });
                
                // Add active state to clicked item
                item.classList.add('bg-blue-100', 'text-blue-700', 'font-medium');
                
                // Close mobile menu
                if (window.innerWidth < 1024) {
                    sidebar.classList.add('-translate-x-full');
                    overlay.classList.add('hidden');
                }
            });
        });

        // Animated counter for inflation rate
        function animateCounter(elementId, targetValue, suffix = '%') {
            const element = document.getElementById(elementId);
            const target = parseFloat(targetValue);
            let current = 0;
            const increment = target / 50;
            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    current = target;
                    clearInterval(timer);
                }
                element.textContent = current.toFixed(1) + suffix;
            }, 50);
        }

        // Framework navigation functionality
        document.querySelectorAll('.framework-nav-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                const targetPage = btn.getAttribute('data-target');
                
                // Find the submenu item and click it
                const targetSubmenuItem = document.querySelector(`[data-page="${targetPage}"]`);
                if (targetSubmenuItem) {
                    // First expand the appropriate menu
                    const menuSection = targetSubmenuItem.closest('.menu-group');
                    const menuHeader = menuSection.querySelector('.menu-header');
                    const submenu = menuHeader.nextElementSibling;
                    const chevron = menuHeader.querySelector('[data-lucide="chevron-down"]');
                    
                    // Expand the menu if it's collapsed
                    if (submenu.classList.contains('hidden')) {
                        submenu.classList.remove('hidden');
                        chevron.style.transform = 'rotate(180deg)';
                    }
                    
                    // Click the submenu item
                    targetSubmenuItem.click();
                }
            });
        });

        // Data highlighting functionality
        function initializeDataHighlighting() {
            const dataCards = document.querySelectorAll('.bg-white.bg-opacity-20');
            
            dataCards.forEach(card => {
                card.addEventListener('mouseenter', () => {
                    card.classList.add('bg-opacity-30', 'scale-105');
                    card.classList.remove('bg-opacity-20');
                });
                
                card.addEventListener('mouseleave', () => {
                    card.classList.remove('bg-opacity-30', 'scale-105');
                    card.classList.add('bg-opacity-20');
                });
            });
        }

        // Initialize animations when title page loads
        function initializeTitlePageAnimations() {
            setTimeout(() => {
                animateCounter('inflation-counter', '40.9');
                animateCounter('hunger-counter', '33.1', 'M');
                animateCounter('loss-counter', '3.5', 'T');
                initializeDataHighlighting();
            }, 500);
        }

        // Initialize animations when overview page loads
        function initializeOverviewAnimations() {
            setTimeout(() => {
                animateCounter('main-inflation', '40.9');
                initializeTimelineInteractivity();
            }, 500);
        }

        // Timeline interactivity
        function initializeTimelineInteractivity() {
            const timelinePoints = document.querySelectorAll('.timeline-point');
            const selectedRate = document.getElementById('selected-rate');
            const selectedPeriod = document.getElementById('selected-period');
            const statusIndicator = document.getElementById('status-indicator');
            const crisisStatus = document.getElementById('crisis-status');
            const impactPeople = document.getElementById('impact-people');
            const periodInsight = document.getElementById('period-insight');
            const crisisInfoPanel = document.getElementById('crisis-info-panel');

            const timelineData = {
                '2020': {
                    rate: '11.9%',
                    status: 'Manageable',
                    indicator: '✅',
                    people: '15.2M',
                    insight: 'Food inflation was at manageable levels in 2020 at 11.9%. While concerning, the situation was still within policy control parameters with targeted interventions showing effectiveness.',
                    panelClass: 'bg-gradient-to-r from-green-50 to-green-100 border-green-500'
                },
                '2021': {
                    rate: '17.4%',
                    status: 'Rising Concern',
                    indicator: '⚠️',
                    people: '21.8M',
                    insight: 'By 2021, food inflation rose to 17.4%, marking a 46% increase from 2020. Early warning signs emerged as supply chain disruptions and security challenges began impacting food systems.',
                    panelClass: 'bg-gradient-to-r from-yellow-50 to-yellow-100 border-yellow-500'
                },
                '2022': {
                    rate: '23.1%',
                    status: 'Critical Alert',
                    indicator: '🔶',
                    people: '25.3M',
                    insight: 'Food inflation reached 23.1% in 2022, crossing critical thresholds. The Russia-Ukraine conflict, flooding, and increased insecurity significantly disrupted agricultural production and supply chains.',
                    panelClass: 'bg-gradient-to-r from-orange-50 to-orange-100 border-orange-500'
                },
                '2023': {
                    rate: '35.2%',
                    status: 'Emergency',
                    indicator: '🔴',
                    people: '31.8M',
                    insight: 'The situation escalated to emergency levels in 2023 with 35.2% food inflation. Currency devaluation, fuel subsidy removal, and persistent insecurity created a perfect storm affecting millions.',
                    panelClass: 'bg-gradient-to-r from-red-50 to-red-100 border-red-500'
                },
                '2024': {
                    rate: '40.9%',
                    status: 'CRISIS LEVEL',
                    indicator: '🚨',
                    people: '33.1M',
                    insight: 'Nigeria\'s food inflation reached its highest point in March 2024 at 40.9%, representing a 344% increase from 2020 levels. This crisis affects over 33 million people facing acute food insecurity.',
                    panelClass: 'bg-gradient-to-r from-red-50 to-orange-50 border-red-500'
                }
            };

            timelinePoints.forEach(point => {
                point.addEventListener('click', () => {
                    const period = point.getAttribute('data-period');
                    const data = timelineData[period];

                    // Remove active state from all points
                    timelinePoints.forEach(p => {
                        p.classList.remove('ring-4', 'ring-white', 'ring-opacity-50');
                    });

                    // Add active state to clicked point
                    point.classList.add('ring-4', 'ring-white', 'ring-opacity-50');

                    // Update information panel
                    selectedRate.textContent = data.rate;
                    selectedPeriod.textContent = period;
                    statusIndicator.textContent = data.indicator;
                    crisisStatus.textContent = data.status;
                    impactPeople.textContent = data.people;
                    periodInsight.textContent = data.insight;

                    // Update panel styling
                    crisisInfoPanel.className = `rounded-lg p-6 border-l-4 ${data.panelClass}`;

                    // Animate the main inflation display
                    const mainInflation = document.getElementById('main-inflation');
                    mainInflation.style.transform = 'scale(0.8)';
                    setTimeout(() => {
                        mainInflation.textContent = data.rate;
                        mainInflation.style.transform = 'scale(1)';
                    }, 150);

                    // Add visual feedback
                    point.style.transform = 'scale(1.2)';
                    setTimeout(() => {
                        point.style.transform = 'scale(1)';
                    }, 200);
                });
            });

            // Set initial active state for 2024
            const currentPoint = document.querySelector('[data-period="2024"]');
            if (currentPoint) {
                currentPoint.classList.add('ring-4', 'ring-white', 'ring-opacity-50');
            }
        }

        // Next button functionality
        document.getElementById('title-next-btn').addEventListener('click', () => {
            document.querySelector('[data-page="advisory-team"]').click();
        });
        
        document.getElementById('team-next-btn').addEventListener('click', () => {
            document.querySelector('[data-page="overview"]').click();
        });

        document.getElementById('existing-policies-next-btn').addEventListener('click', () => {
            document.querySelector('[data-page="effectiveness"]').click();
        });

        document.getElementById('effectiveness-next-btn').addEventListener('click', () => {
            document.querySelector('[data-page="gaps-challenges"]').click();
        });

        document.getElementById('gaps-challenges-next-btn').addEventListener('click', () => {
            document.querySelector('[data-page="problem-definition"]').click();
        });

        document.getElementById('problem-definition-next-btn').addEventListener('click', () => {
            document.querySelector('[data-page="policy-objectives"]').click();
        });

        document.getElementById('policy-objectives-next-btn').addEventListener('click', () => {
            document.querySelector('[data-page="proposed-intervention"]').click();
        });

        document.getElementById('proposed-intervention-next-btn').addEventListener('click', () => {
            document.querySelector('[data-page="stakeholder-analysis"]').click();
        });

        document.getElementById('stakeholder-analysis-next-btn').addEventListener('click', () => {
            document.querySelector('[data-page="implementation-strategy"]').click();
        });

        // Initialize first page
        document.querySelector('[data-page="title-page"]').click();
        
        // Auto-expand first menu
        document.querySelector('[data-menu="policy-context"]').click();
        
        // Start title page animations
        initializeTitlePageAnimations();
    </script>
